    private void planPresentatieActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_planPresentatieActionPerformed

        //dc.planPresentatie(beginTijdStip, eindTijdstip, txtLokaal.getText(), txtCampus.getText(), studenten.get(cmbStudenten.getSelectedItem()));
        String student = (String) cmbStudenten.getSelectedItem();
        int studentId = -1;

        for (Student s : dc.geefLijstStudenten()) {
            if (student.equals(s.toString())) {
            studentId = s.getId();
            }
        }

        dc.planPresentatie(dag, tijdsvak, lokaalId, campusId, studentId);
        //this.setVisible(false);
        //hier

        this.dispose();
        new PlanningOpstellenJFrame(dc);
    }//GEN-LAST:event_planPresentatieActionPerformed

